{
  "manifest_version": 3,
  "name": "Summa.tube",
  "description": "Transcript and AI summaries of YouTube videos.",
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "48": "icon48.png"
    }
  },
  "icons": {
    "128": "icon128.png"
  },
  "permissions": ["activeTab", "sidePanel", "webNavigation", "identity"],
  "oauth2": {
    "client_id": "1008217284817-m5q6tc06aereog9mtrj07t2i6ao638oo.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["src/pages/content/index.tsx"]
    }
  ],
  "side_panel": {
    "default_path": "src/pages/panel/index.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["icon128.png", "icon48.png"],
      "matches": []
    }
  ]
}
